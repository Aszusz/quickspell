{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Zero To Tauri",
  "version": "0.1.0",
  "identifier": "com.adrian.zero-to-tauri",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Zero To Tauri",
        "width": 800,
        "height": 600,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "alwaysOnTop": true,
        "trafficLightPosition": {
          "x": -1000,
          "y": -1000
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": ["resources/spells/**/*", "resources/providers/**/*"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
